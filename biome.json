{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "system",
    "quoteStyle": "double",
    "jsxQuoteStyle": "double",
    "semicolons": "always",
    "trailingComma": "all"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "**/.next/**",
      "**/dist/**",
      "**/coverage/**",
      "postcss.config.js",
      "tailwind.config.cjs",
      "**/drizzle.config.ts",
      "**/migrate.ts",
      "**/prettier.config.mjs",
      "**/.turbo/**",
      "**/node_modules/**",
      "**/build/**"
    ]
  }
}
