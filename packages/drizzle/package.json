{
  "name": "@packages/drizzle",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsc --watch",
    "db:pull": "drizzle-kit introspect:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:studio": "drizzle-kit studio --port 3100",
    "postinstall": "# drizzle-kit generate:sqlite",
    "build": "tsc",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "test:ts": "tsc --noEmit",
    "clean": "rm -rf ./dist && rm -rf .turbo"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ]
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@libsql/linux-x64-gnu": "0.5.0-pre.5",
    "@packages/env": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.38.3"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "publishConfig": {
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ]
      }
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^22.10.3",
    "dotenv-cli": "latest",
    "drizzle-kit": "^0.30.1",
    "typescript": "^5.7.2"
  }
}
