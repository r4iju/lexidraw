{
  "name": "@packages/drizzle",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "bun x tsc --watch --project tsconfig.json",
    "db:migrate": "drizzle-kit migrate:generate",
    "db:pull": "drizzle-kit introspect",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio --port 3100",
    "postinstall": "# drizzle-kit generate",
    "build": "bun x tsc --project tsconfig.json",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "test:ts": "bun x tsc --noEmit --project tsconfig.json",
    "clean": "rm tsconfig.tsbuildinfo && rm -rf ./dist && rm -rf .turbo && rm -rf node_modules"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ]
  },
  "dependencies": {
    "@libsql/client": "^0.15.6",
    "@libsql/linux-x64-gnu": "0.5.5",
    "@packages/env": "workspace:*",
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.41.0"
  },
  "devDependencies": {
    "@packages/types": "workspace:*",
    "@types/node": "^22.15.19",
    "dotenv-cli": "latest",
    "drizzle-kit": "^0.30.6",
    "typescript": "^5.8.3"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "publishConfig": {
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ]
      }
    }
  },
  "files": [
    "dist"
  ]
}
