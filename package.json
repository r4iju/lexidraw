{
  "repository": "https://github.com/r4iju/lexidraw",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun dotenv -e .env.production -- turbo run build",
    "dev": "bun dotenv -e .env.development -- turbo run dev",
    "start": "bun dotenv -e .env.production -- turbo run start",
    "clean": "turbo run clean && rm -rf node_modules && rm -f bun.lockb && rm -rf .turbo",
    "db:studio": "bun dotenv -e .env.development -- turbo run db:studio",
    "db:pull": "bun dotenv -e .env.development -- turbo run db:pull",
    "db:push": "bun dotenv -e .env.development -- turbo run db:push",
    "db:generate": "bun dotenv -e .env.development -- turbo run db:generate",
    "lint": "bun dotenv -e .env.development -- turbo run lint --continue",
    "test": "bun dotenv -e .env.test -- turbo run test --continue",
    "test:ts": "bun dotenv -e .env.test -- turbo run test:ts --continue"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@next/eslint-plugin-next": "15.0.0-rc.0",
    "@types/eslint": "^8.56.10",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/parser": "^8.19.0",
    "dotenv-cli": "latest",
    "eslint": "^9.17.0",
    "eslint-config-turbo": "latest",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-compiler": "19.0.0-beta-df7b47d-20241124",
    "eslint-plugin-react-hooks": "^5.1.0",
    "turbo": "^2.3.3",
    "typescript-eslint": "^8.19.0"
  },
  "packageManager": "bun@1.1.42",
  "name": "excalifork"
}
