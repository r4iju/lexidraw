{
  "repository": "https://github.com/r4iju/lexidraw",
  "license": "MIT",
  "private": true,
  "name": "lexidraw",
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "./build.sh; bun dotenv -e .env.production -- turbo run build",
    "dev": "bun dotenv -e .env.development -- turbo run dev --parallel --filter=@apps/lexidraw --filter=@apps/render-html-worker --filter=@apps/cron-runner",
    "start": "bun dotenv -e .env.production -- turbo run start",
    "clean": "turbo run clean && rm -rf node_modules && rm -f bun.lockb && rm -rf .turbo",
    "db:studio": "bun dotenv -e .env.development -- turbo run db:studio",
    "db:pull": "bun dotenv -e .env.development -- turbo run db:pull",
    "db:push": "bun dotenv -e .env.production -- turbo run db:push",
    "db:migrate": "bun dotenv -e .env.development -- turbo run db:migrate",
    "db:generate": "bun dotenv -e .env.development -- turbo run db:generate",
    "lint": "bun dotenv -e .env.development -- turbo run lint --write --continue",
    "format": "bun x @biomejs/biome format --write .",
    "test": "bun dotenv -e .env.test -- turbo run test --continue",
    "test:ts": "bun dotenv -e .env.test -- turbo run test:ts --continue"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "dotenv-cli": "^10",
    "turbo": "^2.5.3"
  },
  "packageManager": "bun@1.3.0"
}
