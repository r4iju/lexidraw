{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/crons/bucket-cleanup",
      "schedule": "50 * * * *"
    },
    {
      "path": "/api/crons/process-thumbnail-jobs",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/crons/backup-turso",
      "schedule": "5 2 * * *"
    }
  ],
  "functions": {
    "app/api/render-html/route": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
